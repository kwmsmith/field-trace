def build(bld):
    cflags = "-Wall -O3"
    includes = '../src /opt/local/include'
    lib = 'gsl gslcblas'
    libpath = '/Users/ksmith/lib'

    # bld(
        # features = 'c cshlib pyext',
        # source   = 'wrap_gsl_interp.pyx',
        # cflags   = cflags,
        # target   = 'wrap_gsl_interp',
        # includes = '/opt/local/include',
        # lib      = 'gsl gslcblas',

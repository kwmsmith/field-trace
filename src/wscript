        # use      = "NUMPY",
        # )

    # bld(
        # features = 'c cshlib pyext',
        # source = 'bilinear.pyx',
        # cflags = cflags,
        # target = 'bilinear',
        # )

    bld(
        features = 'c cshlib pyext',
        source   = 'gsl_interp2d.c wrap_gsl_interp2d.pyx',
        target   = 'wrap_gsl_interp2d',
        cflags   = cflags,
        includes = includes,
        lib      = lib,
        # libpath = '/Library/Frameworks/EPD64.framework /opt/local/lib',
        libpath = libpath,
        use      = "NUMPY",
        )

    bld(
        features = 'c cshlib',
        # this is a workaround; shouldn't have to recompile gsl_interp2d.c here...
        source = 'gsl_interp2d.c trace_integrator.c',
        target = 'trace_integrator',
        cflags = cflags,
        includes = includes,
        lib      = lib,
        libpath = libpath,
        # use = "wrap_gsl_interp2d",
        )

